<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_apply"
            android:layout_width="68dp"
            android:layout_height="45dp"
            android:text="적용" />

        <Button
            android:id="@+id/button_close"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:text="X" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추천 조건 설정"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="20dp"
                android:text="원하는 공강 요일" />

            <TableLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#DCDCD3">

                <TableRow android:layout_width="match_parent">

                    <CheckBox
                        android:id="@+id/mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="월 " />

                    <CheckBox
                        android:id="@+id/tue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="화 " />

                    <CheckBox
                        android:id="@+id/wen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="수" />

                    <CheckBox
                        android:id="@+id/thu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="목" />

                    <CheckBox
                        android:id="@+id/fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="금" />
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="교양 영역 선택 (1개 이상 3개 이하)" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#DCDCD3">

                <TableRow android:layout_width="match_parent">

                    <CheckBox
                        android:id="@+id/sci_tec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="과학과 기술" />

                    <CheckBox
                        android:id="@+id/expression"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="언어와 표현" />

                    <CheckBox
                        android:id="@+id/human"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="인간과 철학" />

                </TableRow>

                <TableRow android:layout_width="match_parent">

                    <CheckBox
                        android:id="@+id/social"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="사회와 경제" />

                    <CheckBox
                        android:id="@+id/global"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="글로벌 문화와 제2외국어" />
                </TableRow>

                <TableRow android:layout_width="match_parent">

                    <CheckBox
                        android:id="@+id/arts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="예술과 체육" />

                    <CheckBox
                        android:id="@+id/e_learning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="서울권역 e-러닝" />

                    <CheckBox
                        android:id="@+id/english"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="실용영어" />

                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="20dp"
                android:text="제외할 검색어" />

            <TableLayout
                android:id="@+id/nameTag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#DCDCD3">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text" />

                    <Button
                        android:id="@+id/add_button"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="+" />

                </TableRow>

                <TableRow android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="1"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="1"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="1"
                        android:text="TextView" />
                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                android:text="꼭 넣어야 할 강의"
                android:visibility="invisible" />

            <SearchView
                android:id="@+id/findclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:visibility="invisible" />

            <TableLayout
                android:id="@+id/classTable"
                android:layout_width="370dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_weight="15"
                android:orientation="vertical"
                android:visibility="invisible">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#DCDCD3"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="No." />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#DCDCD3"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="강의명" />

                    <TextView
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#DCDCD3"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="교수명" />

                </TableRow>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/select1"
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="1" />

                        <TextView
                            android:id="@+id/cn1"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                        <TextView
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/select2"
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="2" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                        <TextView
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/select3"
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="3" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                        <TextView
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/select4"
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="4" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                        <TextView
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="5" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                        <TextView
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="6" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                        <TextView
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="52dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="7" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                        <TextView
                            android:layout_width="118dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:padding="3dp" />

                    </TableRow>
                </LinearLayout>

            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>