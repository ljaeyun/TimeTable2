<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/custom</item>
        <item name="android:buttonStyle">@style/NanumsrButtonStyle</item>
        <item name="android:editTextStyle">@style/NanumsrEditTextStyle</item>
        <item name="android:checkboxStyle">@style/NanumsrCheckboxStyle</item>
        <item name="android:textViewStyle">@style/NanumsrTextViewStyle</item>
    </style>
    <style name="NanumsrTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/nanumsquareround</item>
    </style>
    <style name="NanumsrButtonStyle" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:fontFamily">@font/nanumsquareround</item>
    </style>
    <style name="NanumsrEditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/nanumsquareround</item>
        <item name="android:textCursorDrawable">@color/custom</item>
    </style>
    <style name="NanumsrCheckboxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
    <item name="android:fontFamily">@font/nanumsquareround</item>
    </style>
</resources>
